@media (min-width: 868px) {
  .dropdown-menu {
    left: 50%;
    transform: translate(-50%, 0px);
    background-color: rgba(0, 0, 0, 0.7);
    top: 48px;
    padding: 17px 30px 40px 30px;
    min-width: 500px;
  }
  .dropdown-menu > ul {
    display: flex;
    flex-direction: column;
    padding-left: 0px;
    padding-right: 20px; 
  }

  .dropdown-menu li {
    /* width: 110px !important; */
    display: inline-block;
    margin-left: 2px;
    margin-right: 2px !important;
    padding: 0px !important;
    line-height: 25px;
    text-align: left;
    position: relative;
  }

  .dropdown-menu li > a {
    color: white !important;
    padding: 0px 2px !important;
  }

  .dropdown-menu li:hover::before {
    content: " ";
    border-left: 5px solid white;
    border-top: 5px solid transparent;
    display: block;
    position: absolute;
    left: -14px;
    top: 50%;
    transform: translate(0px, -100%);
  }

  .dropdown-menu li:hover::after {
    content: " ";
    border-left: 5px solid white;
    border-bottom: 5px solid transparent;
    display: block;
    position: absolute;
    left: -14px;
    top: 50%;
  }

  .open>.dropdown-menu {
    display: flex !important;
    justify-content: space-between;
  }

  div#home_banner {
    overflow: hidden;
    margin-top: 55px;
  }

  /*Product Page*/

  .product-photo-container {
    width: 375px;
    height: 500px;
    max-width:100%;
  }
  .product-photo-thumb {
    padding: 6px;
  }

  /* Cart Page */

  .cart-item-img {
    padding: 0px;
  }
  .cart-item-img img {
    height: 215px;
  }
  .cart-item-text p {
    margin-bottom: 15px;
    margin-top: 10px;
  }
  .cart-item-text .h6 {
    font-size: 11px;
    font-weight: 600;
  }
  a.remove {
    border: 1px solid #D9D9DA;
    padding: 4px 4px;
    text-decoration: none;
  }

}


