{% layout settings.customer_layout %}

<div id="customer-reset-password">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-6">
        <h3>{{ 'customer.reset_password.title' | t }}</h3>

        {% form 'reset_customer_password' %}
        {{ form.errors | default_errors }}
        <div id="login_email" class="form-group {% if form.errors contains 'email' %}has-error has-feedback{% endif %}">
          <label class="label" for="password">{{ 'customer.reset_password.password' | t }}</label>
          <input type="password" value="" name="customer[password]" id="customer_password" class="text  form-control" size="16" />
        </div>
        <div id="login_email" class="form-group {% if form.errors contains 'email' %}has-error has-feedback{% endif %}">
          <label class="label" for="password_confirmation">{{ 'customer.reset_password.password_confirm' | t }}</label>
          <input type="password" value="" name="customer[password_confirmation]" id="customer_password_confirmation" class="text form-control" size="16" />
        </div>
        <div class="action_bottom">
          <input class="btn btn-primary" type="submit" value="{{ 'customer.reset_password.submit' | t }}" />
        </div>
        {% endform %}
      </div>
    </div>
  </div> 

</div> 
