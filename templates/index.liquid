  </div>
  <div class="container con_change homepageslider">
    <div class="home_banner text-center hidden-xs">
      <img src="{{'blue-eye-weare.png' | asset_url}}" alt="" title="" class="img-responsive">
    </div>
    <!-- Start products -->
    {% if settings.frontpage_collection != '' %}
    <div class="carouselproducts">
      <div class="hidden-xs">
      <div class="bxslider"> 
        {% assign collection = collections[settings.frontpage_collection] %}
        {% for p in collections[settings.frontpage_collection].products limit: 15 %}        
        <div class="col-xs-">
          <a href="{{p.url | within: collection}}">
            <img src="{{p.featured_image | img_url: 'medium'}}" class="img-responsive" />
          </a>
          {% assign v = p.selected_or_first_available_variant %}
          {% if v.compare_at_price > v.price %}
          <p class="price_display">On Sale: {{ v.price | money }}</p>
          {% else %}
          <p class="price_display">{{ v.price | money }}</p>
          {% endif %}          
        </div>
        {% endfor %} 
      </div>
      </div>
      <div class="visible-xs">
      <div class="product_slider"> 
        {% assign collection = collections[settings.frontpage_collection] %}
        {% for p in collections[settings.frontpage_collection].products limit: 15 %}        
        <div class="col-xs-">
          <a href="{{p.url | within: collection}}">
            <img src="{{p.featured_image | img_url: 'master'}}" class="img-responsive" />
          </a>
          <p class="p-title text-center">{{ p.title }}</p>
          {% assign v = p.selected_or_first_available_variant %}
          {% if v.compare_at_price > v.price %}
          <p class="price_display">On Sale: {{ v.price | money }}</p>
          {% else %}
          <p class="price_display">{{ v.price | money }}</p>
          {% endif %}          
        </div>
        {% endfor %} 
      </div>
      </div>
    </div>
    {% endif %}
  </div>
</div>

